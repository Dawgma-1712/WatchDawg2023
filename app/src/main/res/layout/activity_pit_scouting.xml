            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/abilityToDockAndEngage"
            android:layout_width="259dp"
            android:layout_height="46dp"
            android:layout_marginTop="900dp"
            android:hint="Ability to dock and engage"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dockingAndEngagingFeatures"
            android:layout_width="259dp"
            android:layout_height="46dp"
            android:layout_marginTop="944dp"
            android:hint="Docking and engaging features"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/autoRoutine"
            android:layout_width="259dp"
            android:layout_height="46dp"
            android:layout_marginTop="1000dp"
            android:hint="Notes on auto routine"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/notesOnRobot"
            android:layout_width="259dp"
            android:layout_height="46dp"
            android:layout_marginTop="1052dp"
            android:hint="Notes on robot general"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/pitScoutingSave"
            android:layout_width="139dp"
            android:layout_height="84dp"
            android:layout_marginTop="1176dp"
            android:background="@color/white"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.306"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


