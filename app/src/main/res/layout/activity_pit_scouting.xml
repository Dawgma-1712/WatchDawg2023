            android:layout_width="184dp"
            android:layout_height="51dp"
            android:layout_marginTop="348dp"
            android:hint=" Number of motors"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Weight"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="44dp"
            android:hint="Weight"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/TeamNumPit"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/TeamNumPit"
            app:layout_constraintTop_toBottomOf="@+id/TeamNumPit" />

        <EditText
            android:id="@+id/DriveMotors"
            android:layout_width="166dp"
            android:layout_height="55dp"
            android:layout_marginTop="56dp"
            android:hint="Drive Motor Type"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/Weight"
            app:layout_constraintStart_toStartOf="@+id/Weight"
            app:layout_constraintTop_toBottomOf="@+id/Weight" />

        <EditText
            android:id="@+id/locationOfScoring"
            android:layout_width="259dp"
            android:layout_height="52dp"
            android:layout_marginTop="712dp"
